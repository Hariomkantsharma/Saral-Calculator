<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF7D4"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/inputSection"
            android:textColor="@color/black"
            android:textSize="40dp"
            >

        </TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_above="@+id/buttonPanel"
        android:background="@color/black">

        <TextView
            android:id="@+id/Resultequal"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="70dp"
            android:textAlignment="viewStart"
            >

        </TextView>
        <TextView
            android:id="@+id/resultSection"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Press a button"
            android:textColor="@color/white"
            android:textAlignment="center"

            android:layout_toRightOf="@+id/Resultequal"/>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="BS"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_btn" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#101227"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonPanel"
        android:textAlignment="center"

        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:columnCount="4"
            android:rowCount="4"
            android:textAlignment="center"
            >

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
               android:text="1"
                android:textSize="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="2"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="3"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="+"
                android:textSize="32dp"

                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="4"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="5"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="6"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="-"
                android:textSize="32dp"

                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="7"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="8"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="9"
                android:textSize="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="x"
                android:textSize="32dp"

                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnOpenBracket"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="("
                android:textSize="32dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnCloseBracket"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text=")"
                android:textSize="32dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="/"
                android:textSize="32dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/custom_btn" />

            <Button
                android:id="@+id/btnAC"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:text="AC"
                android:textSize="25dp"

                android:background="@drawable/custom_btn" />


        </GridLayout>




    </RelativeLayout>

</RelativeLayout>