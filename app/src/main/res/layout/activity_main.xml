<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF7D4"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/inputSection"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:padding="8dp"
                    />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                <TextView
                        android:id="@+id/Resultequal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="="
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="30sp"/>


                <TextView
                        android:id="@+id/resultSection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30sp"
                        android:text="Press a button"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center" />

            </LinearLayout>



            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#101227"
                android:useDefaultMargins="true"
                android:columnCount="4"
                android:rowCount="5"
                android:columnOrderPreserved="true"
                    >

                    <Button
                        android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="1"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="2"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="3"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnDelete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="BS"
                        android:textSize="25sp" />


                    <Button
                        android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="4"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="5"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="6"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="+"
                        android:textSize="32sp" />


                    <Button
                        android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="7"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="8"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="9"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="-"
                        android:textSize="32sp" />


                    <Button
                        android:id="@+id/btnOpenBracket"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="("
                        android:textSize="32sp" />


                    <Button
                        android:id="@+id/btn0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="0"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnCloseBracket"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text=")"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnMul"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="x"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnRoot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="Æ’"
                        android:textSize="32sp" />

                    <Button
                        android:id="@+id/btnSquare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="*"
                        android:textSize="32sp" />

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:background="@drawable/custom_btn"

                    android:text="AC"
                    android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnDivide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
android:layout_gravity="fill"
                        android:background="@drawable/custom_btn"

                        android:text="/"
                        android:textSize="32sp" />




                </GridLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tap on result to copy"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#5A5757"
                android:padding="8dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>